#include "Shared/Platform/iOS.xcconfig"
#include "Shared/Product/Framework.xcconfig"

PRODUCT_NAME = Bolts
PRODUCT_BUNDLE_IDENTIFIER = com.bolts.ios
IPHONEOS_DEPLOYMENT_TARGET = 8.0

MACH_O_TYPE = mh_dylib
DYLIB_INSTALL_NAME_BASE = @rpath

DEFINES_MODULE = YES
MODULEMAP_FILE = $(SRCROOT)/Bolts/Resources/iOS.modulemap

OTHER_CFLAGS = $(inherited) -fembed-bitcode -I$(SDKROOT)/usr/include/libxml2

OTHER_LDFLAGS = $(inherited) -ObjC -lxml2 -framework CoreGraphics -framework UIKit

INFOPLIST_FILE = $(SRCROOT)/Bolts/Resources/iOS-Info.plist
